# ForaOS Environment Variables
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to git - it's in .gitignore

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.8

# ElevenLabs Configuration (Optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1

# Venice AI Configuration (Alternative to OpenAI)
VENICE_API_KEY=your_venice_api_key_here
VENICE_BASE_URL=https://api.openai.com/v1
VENICE_MODEL=gpt-3.5-turbo
VENICE_MAX_TOKENS=150

# Twitter Configuration (Optional)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Twitch Configuration (Optional)
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here
TWITCH_ACCESS_TOKEN=your_twitch_access_token_here
